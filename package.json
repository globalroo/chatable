{
	"name": "react-graphql-chat-hack",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-scripts": "2.1.8"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"codecov": "yarn test --coverage && codecov",
		"deploy": "yarn run build && gh-pages -d build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"jest": {
		"collectCoverageFrom": [
			"src/*.js",
			"src/**/*.js",
			"!src/serviceWorker.js",
			"!src/index.js",
			"!src/tmdb-service/tmdb-key.js"
		]
	},
	"devDependencies": {
		"codecov": "3.2.0",
		"gh-pages": "2.0.1",
		"husky": "1.3.1",
		"prettier": "1.16.4",
		"pretty-quick": "1.10.0"
	}
}